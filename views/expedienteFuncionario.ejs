<!DOCTYPE html>
<html lang="pt-br">
<head>
  <meta charset="UTF-8">
  <title>Expediente de <%= funcionario.nome %></title>
  <style>
    body {
      font-family: Arial, sans-serif;
      background: #f4f4f8;
      padding: 40px;
    }
    .container {
      background: white;
      border-radius: 8px;
      box-shadow: 0 2px 6px #ccc;
      max-width: 700px;
      margin: 0 auto;
      padding: 20px;
    }
    h1 {
      color: #7e57c2;
      margin-bottom: 24px;
    }
    .container h1 {
      text-align: center;
      margin-bottom: 20px;
    }
    table {
      background: white;
      border-collapse: collapse;
      width: 100%;
      box-shadow: none;
    }
    th, td {
      padding: 12px;
      border: 1px solid #ddd;
      text-align: center;
    }
    th {
      background-color: #ede7f6;
      color: #5e35b1;
    }
    input[type="time"] {
      padding: 6px;
      width: 120px;
      max-width: 100%;
      box-sizing: border-box;
      border: 1px solid #ccc;
      border-radius: 4px;
    }
    .toggle-dia {
      padding: 8px 12px;
      font-size: 13px;
      border: none;
      border-radius: 4px;
      cursor: pointer;
      background-color: #7e57c2;
      color: white;
      transition: all 0.2s ease;
    }
    .toggle-dia.inativo {
      background-color: #ccc;
      color: #555;
    }
    button[type="submit"] {
      background-color: #7e57c2;
      color: white;
      border: none;
      padding: 10px 20px;
      font-weight: bold;
      border-radius: 6px;
      cursor: pointer;
      margin-top: 20px;
    }
    button[type="submit"]:hover {
      background-color: #5e35b1;
    }
    a {
      display: inline-block;
      margin-top: 20px;
      color: #7e57c2;
      text-decoration: none;
    }
    a:hover {
      text-decoration: underline;
    }
    .botoes-coluna {
      display: flex;
      flex-direction: column;
      gap: 10px;
      margin-top: 20px;
    }
    .botoes-coluna button,
    .botoes-coluna a {
      width: 100%;
      padding: 10px 0;
      text-align: center;
      font-weight: bold;
      font-size: 14px;
      border-radius: 6px;
      text-decoration: none;
      cursor: pointer;
    }
    .btn-salvar {
      background-color: #43a047;
      color: white;
      border: none;
    }
    .btn-salvar:hover {
      background-color: #2e7d32;
    }
    .btn-voltar {
      background-color: #ccc;
      color: #333;
    }
    .btn-voltar:hover {
      background-color: #aaa;
    }
  </style>
</head>
<body>

  <div class="container">
    <h1>Expediente de <%= funcionario.nome %></h1>

    <form method="POST" action="/expediente-funcionario/<%= funcionario.id %>">
      <table>
        <tr>
          <th>Dia da Semana</th>
          <th>In√≠cio</th>
          <th>Fim</th>
          <th>Status</th>
        </tr>
        <% ["Segunda", "Ter√ßa", "Quarta", "Quinta", "Sexta", "S√°bado", "Domingo"].forEach(dia => {
             const dados = expediente[dia] || {};
             const ativo = (dados.inicio && dados.fim) || true;
        %>
        <tr>
          <td><%= dia %></td>
          <td><input type="time" name="inicio_<%= dia %>" value="<%= dados.inicio || '05:00' %>"></td>
          <td><input type="time" name="fim_<%= dia %>" value="<%= dados.fim || '20:00' %>"></td>
          <td>
            <button type="button" class="toggle-dia <%= ativo ? '' : 'inativo' %>" data-dia="<%= dia %>">
              <%= ativo ? '‚úÖ Ativo' : 'üö´ N√£o trabalha' %>
            </button>
            <input type="checkbox" name="ativo_<%= dia %>" value="on" <%= ativo ? 'checked' : '' %> hidden>
          </td>
        </tr>
        <% }) %>
      </table>

      <div class="botoes-coluna">
        <button type="submit" class="btn-salvar">Salvar Expediente</button>
        <a href="/funcionarios" class="btn-voltar">Cancelar</a>
      </div>
    </form>
  </div>

  <a href="/funcionarios">&larr; Voltar</a>

  <script>
    document.querySelectorAll('.toggle-dia').forEach(btn => {
      btn.addEventListener('click', () => {
        const dia = btn.dataset.dia;
        const checkbox = document.querySelector(`input[name="ativo_${dia}"]`);
        const inicio = document.querySelector(`input[name="inicio_${dia}"]`);
        const fim = document.querySelector(`input[name="fim_${dia}"]`);
        checkbox.checked = !checkbox.checked;
        if (checkbox.checked) {
          btn.textContent = '‚úÖ Ativo';
          btn.classList.remove('inativo');
          inicio.disabled = false;
          fim.disabled = false;
        } else {
          btn.textContent = 'üö´ N√£o trabalha';
          btn.classList.add('inativo');
          inicio.disabled = true;
          fim.disabled = true;
        }
      });
    });
    window.addEventListener('DOMContentLoaded', () => {
      document.querySelectorAll('input[type="checkbox"][name^="ativo_"]').forEach(checkbox => {
        if (!checkbox.checked) {
          const dia = checkbox.name.split('ativo_')[1];
          document.querySelector(`input[name="inicio_${dia}"]`).disabled = true;
          document.querySelector(`input[name="fim_${dia}"]`).disabled = true;
        }
      });
    });
  </script>
</body>
</html>
