<!DOCTYPE html>
<html lang="pt-br">
<head>
  <meta charset="UTF-8">
  <title>Relat칩rios de Agendamentos</title>
  <style>
    body {
      font-family: Arial, sans-serif;
      margin: 20px;
      background-color: #f9f9f9;
    }
    .box {
      background: white;
      padding: 20px;
      border-radius: 8px;
      box-shadow: 0 2px 5px rgba(0,0,0,0.1);
      margin-bottom: 20px;
    }
    form {
      display: flex;
      flex-direction: column;
      gap: 20px;
    }
    .linha-filtros {
      display: flex;
      justify-content: space-between;
      align-items: center;
      flex-wrap: wrap;
      gap: 10px;
    }
    .grupo-esquerda {
      display: flex;
      align-items: center;
      gap: 10px;
      flex-wrap: wrap;
    }
    .grupo-direita {
      display: flex;
      align-items: center;
      gap: 10px;
    }
    label {
      font-weight: bold;
    }
    input, select {
      padding: 8px;
      border-radius: 4px;
      border: 1px solid #ccc;
      min-width: 150px;
    }
    button, a.button-link {
      padding: 8px 16px;
      min-width: 150px;
      text-align: center;
      border-radius: 4px;
      background-color: #7e57c2;
      color: white;
      border: none;
      cursor: pointer;
      text-decoration: none;
      display: inline-block;
    }
    button:hover, a.button-link:hover {
      background-color: #6a48b3;
    }
    table {
      width: 100%;
      border-collapse: collapse;
      background: white;
      box-shadow: 0 2px 5px rgba(0,0,0,0.1);
    }
    th, td {
      padding: 12px;
      border: 1px solid #ddd;
      text-align: left;
    }
    th {
      background-color: #7e57c2;
      color: white;
    }
    .paginacao {
      margin-top: 20px;
      display: flex;
      justify-content: center;
      gap: 10px;
    }
    .resumo {
      margin-top: 30px;
      font-weight: bold;
    }
  </style>

  <script>
    function atualizarFiltro() {
      const tipoFiltro = document.getElementById('filtro').value;

      document.getElementById('campoTexto').style.display = (tipoFiltro === 'nome' || tipoFiltro === 'cpf') ? 'block' : 'none';
      document.getElementById('campoProcedimento').style.display = (tipoFiltro === 'procedimento') ? 'block' : 'none';
      document.getElementById('campoFuncionario').style.display = (tipoFiltro === 'funcionario') ? 'block' : 'none';
      document.getElementById('campoValor').style.display = (tipoFiltro === 'valor') ? 'block' : 'none';
      document.getElementById('campoData').style.display = (tipoFiltro === 'data') ? 'block' : 'none';
    }

    window.onload = atualizarFiltro;
  </script>
</head>

<body>

<h1>Relat칩rios de Agendamentos</h1>

<div class="box">
  <form method="get" action="/relatorios">
    
    <!-- Linha principal: Filtros e Bot칫es -->
    <div class="linha-filtros">
      <!-- Parte Esquerda -->
      <div class="grupo-esquerda">
        <label for="filtro">Filtrar por:</label>
        <select name="filtro" id="filtro" onchange="atualizarFiltro()">
          <option value="">Selecione</option>
          <option value="nome" <%= filtro === 'nome' ? 'selected' : '' %>>Nome do Cliente</option>
          <option value="cpf" <%= filtro === 'cpf' ? 'selected' : '' %>>CPF do Cliente</option>
          <option value="procedimento" <%= filtro === 'procedimento' ? 'selected' : '' %>>Procedimento</option>
          <option value="funcionario" <%= filtro === 'funcionario' ? 'selected' : '' %>>Funcion치rio</option>
          <option value="valor" <%= filtro === 'valor' ? 'selected' : '' %>>Valor</option>
          <option value="data" <%= filtro === 'data' ? 'selected' : '' %>>Data</option>
        </select>
        <button type="submit">Filtrar</button>
      </div>

      <!-- Parte Direita -->
      <div class="grupo-direita">
        <a class="button-link" href="/relatorios/pdf?<%= new URLSearchParams(filtros).toString() %>" target="_blank">游늯 Exportar PDF</a>
        <a class="button-link" href="/relatorios/excel?<%= new URLSearchParams(filtros).toString() %>" target="_blank">游늵 Exportar Excel</a>
      </div>
    </div>

    <!-- Campos din칙micos -->
    <div id="campoTexto" style="display:none;">
      <label>Digite aqui:</label>
      <input type="text" name="valorTexto" value="<%= valorTexto %>">
    </div>

    <div id="campoProcedimento" style="display:none;">
      <label>Selecione o Procedimento:</label>
      <select name="valorProcedimento">
        <option value="">Todos</option>
        <% procedimentos.forEach(proc => { %>
          <option value="<%= proc.id %>" <%= valorProcedimento == proc.id ? 'selected' : '' %>><%= proc.nome %></option>
        <% }) %>
      </select>
    </div>

    <div id="campoFuncionario" style="display:none;">
      <label>Selecione o Funcion치rio:</label>
      <select name="valorFuncionario">
        <option value="">Todos</option>
        <% funcionarios.forEach(func => { %>
          <option value="<%= func.id %>" <%= valorFuncionario == func.id ? 'selected' : '' %>><%= func.nome %></option>
        <% }) %>
      </select>
    </div>

    <div id="campoValor" style="display:none;">
      <label>Valor M칤nimo (R$):</label>
      <input type="number" step="0.01" min="0" name="valorMin" value="<%= valorMin %>">
      <label>Valor M치ximo (R$):</label>
      <input type="number" step="0.01" min="0" name="valorMax" value="<%= valorMax %>">
    </div>

    <div id="campoData" style="display:none;">
      <label>Data In칤cio:</label>
      <input type="date" name="dataInicio" value="<%= dataInicio %>">
      <label>Data Fim:</label>
      <input type="date" name="dataFim" value="<%= dataFim %>">
    </div>

  </form>
</div>

<!-- Tabela de Resultados -->
<table>
  <thead>
    <tr>
      <th>Cliente</th>
      <th>Funcion치rio</th>
      <th>Data</th>
      <th>Hor치rio</th>
      <th>Valor Total</th>
    </tr>
  </thead>
  <tbody>
    <% agendamentos.forEach(a => { %>
      <tr>
        <td><%= a.cliente_nome %></td>
        <td><%= a.funcionario_nome %></td>
        <td><%= a.dia %></td>
        <td><%= a.horario %></td>
        <td>R$ <%= parseFloat(a.valor_total || 0).toFixed(2) %></td>
      </tr>
    <% }) %>
  </tbody>

  <div class="paginacao">
    <% if (paginaAtual > 1) { %>
      <a class="button-link" href="?<%= new URLSearchParams({ ...filtros, pagina: paginaAtual - 1 }).toString() %>">拘勇 P치gina Anterior</a>
    <% } %>
  
    <span style="align-self: center;">P치gina <%= paginaAtual %></span>
  
    <% if (temProximaPagina) { %>
      <a class="button-link" href="?<%= new URLSearchParams({ ...filtros, pagina: paginaAtual + 1 }).toString() %>">Pr칩xima P치gina 俱뫮잺</a>
    <% } %>
  </div>
  
</table>



<!-- Resumo Financeiro -->
<div class="resumo">
  <p>Total de agendamentos: <%= agendamentos.length %></p>
  <p>Valor total: R$ <%= agendamentos.reduce((acc, a) => acc + (a.valor_total || 0), 0).toFixed(2) %></p>
</div>

<!-- Bot칚o Voltar -->
<div style="margin-top: 40px;">
  <a href="/agendamentos" class="button-link">拘勇 Voltar</a>
</div>

</body>
</html>
