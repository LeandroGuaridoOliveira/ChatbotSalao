<!DOCTYPE html>
<html lang="pt-br">
<head>
  <meta charset="UTF-8">
  <title>Especialidades</title>
  <style>
    body {
      background-color: #f2f2f2;
      font-family: Arial, sans-serif;
      margin: 0;
      padding: 20px;
      display: flex;
      justify-content: center;
      align-items: flex-start;
      min-height: 100vh;
    }

    .container {
      background: white;
      padding: 30px;
      border-radius: 10px;
      box-shadow: 0 4px 10px rgba(0,0,0,0.1);
      width: 100%;
      max-width: 800px;
    }

    h1 {
      text-align: center;
      color: #6f42c1;
      margin-bottom: 30px;
    }

    table {
      width: 100%;
      border-collapse: collapse;
      margin-top: 20px;
    }

    th, td {
      padding: 12px;
      text-align: center;
      border-bottom: 1px solid #eee;
    }

    th {
      background-color: #6f42c1;
      color: white;
    }

    .btn {
      padding: 8px 16px;
      font-size: 14px;
      border: none;
      border-radius: 6px;
      cursor: pointer;
      text-decoration: none;
      transition: background-color 0.3s;
    }

    .btn-editar {
      background-color: #6f42c1;
      color: white;
    }

    .btn-editar:hover {
      background-color: #5a34a1;
    }

    .btn-excluir {
      background-color: #dc3545;
      color: white;
    }

    .btn-excluir:hover {
      background-color: #b02a37;
    }

    .btn-nova {
      background-color: #6f42c1;
      color: white;
      margin-bottom: 20px;
      display: inline-block;
      padding: 10px 20px;
      font-size: 15px;
      border-radius: 8px;
      text-decoration: none;
      transition: background-color 0.3s;
    }

    .btn-nova:hover {
      background-color: #5a34a1;
    }

    .botoes {
      display: flex;
      justify-content: center;
      gap: 10px;
    }
  </style>
</head>
<body>

  <div class="container">
    <h1>Especialidades</h1>

    <div style="text-align: center;">
      <a href="/nova-especialidade" class="btn-nova">Nova Especialidade</a>
    </div>

    <table>
      <thead>
        <tr>
          <th>Nome</th>
          <th>Ações</th>
        </tr>
      </thead>
      <tbody>
        <% especialidades.forEach(e => { %>
          <tr>
            <td><%= e.nome %></td>
            <td class="botoes">
              <a href="/editar-especialidade/<%= e.id %>" class="btn btn-editar">Editar</a>

              <form method="POST" action="/excluir-especialidade/<%= e.id %>" class="form-excluir" style="display:inline;">
                <button type="submit" class="btn btn-excluir">Excluir</button>
              </form>
            </td>
          </tr>
        <% }) %>
      </tbody>
    </table>

    <div style="text-align: center; margin-top: 20px;">
      <a href="/agendamentos" class="btn btn-voltar" style="background-color:#ccc; color:#333;">Voltar</a>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

  <script>
    // SweetAlert para confirmação de exclusão
    document.querySelectorAll('.form-excluir').forEach(form => {
      form.addEventListener('submit', function(event) {
        event.preventDefault();

        Swal.fire({
          title: 'Tem certeza?',
          text: "Esta ação não poderá ser desfeita!",
          icon: 'warning',
          showCancelButton: true,
          confirmButtonColor: '#6f42c1',
          cancelButtonColor: '#d33',
          confirmButtonText: 'Sim, excluir!',
          cancelButtonText: 'Cancelar'
        }).then((result) => {
          if (result.isConfirmed) {
            form.submit();
          }
        });
      });
    });
  </script>

</body>
</html>
