<!DOCTYPE html>
<html lang="pt-br">
<head>
  <meta charset="UTF-8">
  <title>Especialidades</title>
  <style>
    body {
      background-color: #f2f2f2;
      font-family: Arial, sans-serif;
      margin: 0;
      padding: 20px;
      display: flex;
      justify-content: center;
      align-items: flex-start;
      min-height: 100vh;
    }
  
    .container {
      background: white;
      padding: 30px;
      border-radius: 10px;
      box-shadow: 0 4px 10px rgba(0,0,0,0.1);
      width: 100%;
      max-width: 800px;
    }
  
    h1 {
      text-align: center;
      color: #6f42c1;
      margin-bottom: 30px;
    }
  
    table {
      width: 100%;
      border-collapse: collapse;
      margin-top: 20px;
      background-color: white;
      box-shadow: 0 2px 6px rgba(0,0,0,0.1);
    }
  
    th, td {
      padding: 12px;
      text-align: center;
      border-bottom: 1px solid #eee;
    }
  
    th {
      background-color: #6f42c1;
      color: white;
    }
  
    /* Grupo de bot√µes lado a lado */
    .botoes {
      display: flex;
      justify-content: center;
      gap: 6px; /* espa√ßo entre os bot√µes */
    }
  
    .botao-largo {
      padding: 6px 12px; /* üî• MENOR altura e largura */
      font-size: 13px;
      border-radius: 6px;
      border: none;
      cursor: pointer;
      text-decoration: none;
      transition: background-color 0.3s;
      flex: none; /* üî• N√£o esticar */
      min-width: 80px; /* üî• largura m√≠nima para ficar bonito */
    }
  
    .botao-roxo {
      background-color: #6f42c1;
      color: white;
    }
    .botao-roxo:hover {
      background-color: #5a34a1;
    }
  
    .botao-vermelho {
      background-color: #dc3545;
      color: white;
    }
    .botao-vermelho:hover {
      background-color: #b02a37;
    }
  
    /* Bot√£o para Nova Especialidade */
    .btn-nova {
      background-color: #6f42c1;
      color: white;
      margin-bottom: 20px;
      display: inline-block;
      padding: 8px 16px;
      font-size: 15px;
      border-radius: 8px;
      text-decoration: none;
      transition: background-color 0.3s;
    }
    .btn-nova:hover {
      background-color: #5a34a1;
    }
  </style>
  
  
</head>
<body>

  <div class="container">
    <h1>Especialidades</h1>

    <div style="text-align: center;">
      <a href="/nova-especialidade" class="btn-nova">Nova Especialidade</a>
    </div>

    <table>
      <thead>
        <tr>
          <th>Nome da Especialidade</th>
          <th style="width: 200px;">A√ß√µes</th>
        </tr>
      </thead>
      <tbody>
        <% especialidades.forEach(e => { %>
          <tr>
            <td><%= e.nome %></td>
            <td>
              <div class="botoes">
                <form method="GET" action="/editar-especialidade/<%= e.id %>">
                  <button type="submit" class="botao-roxo botao-largo">Editar</button>
                </form>
            
                <button type="button" class="botao-vermelho botao-largo" onclick="confirmarExclusaoEspecialidade(<%= e.id %>)">
                  Excluir
                </button>
              </div>
            </td>
            
          </tr>
        <% }) %>
      </tbody>
    </table>
    
    <div style="text-align: center; margin-top: 20px;">
      <a href="/agendamentos" class="btn btn-voltar" style="background-color:#ccc; color:#333;">Voltar</a>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

  <script>
    // SweetAlert para confirma√ß√£o de exclus√£o
    document.querySelectorAll('.form-excluir').forEach(form => {
      form.addEventListener('submit', function(event) {
        event.preventDefault();

        Swal.fire({
          title: 'Tem certeza?',
          text: "Esta a√ß√£o n√£o poder√° ser desfeita!",
          icon: 'warning',
          showCancelButton: true,
          confirmButtonColor: '#6f42c1',
          cancelButtonColor: '#d33',
          confirmButtonText: 'Sim, excluir!',
          cancelButtonText: 'Cancelar'
        }).then((result) => {
          if (result.isConfirmed) {
            form.submit();
          }
        });
      });
    });
  </script>

<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

<script>
function confirmarExclusaoEspecialidade(id) {
  Swal.fire({
    title: 'Tem certeza?',
    text: 'Essa a√ß√£o excluir√° a especialidade permanentemente!',
    icon: 'warning',
    showCancelButton: true,
    confirmButtonColor: '#e53935',
    cancelButtonColor: '#7e57c2',
    confirmButtonText: 'Sim, excluir',
    cancelButtonText: 'Cancelar'
  }).then((result) => {
    if (result.isConfirmed) {
      excluirEspecialidade(id);
    }
  });
}

async function excluirEspecialidade(id) {
  try {
    const response = await fetch(`/excluir-especialidade/${id}`, {
      method: 'POST'
    });
    if (response.ok) {
      Swal.fire('Exclu√≠do!', 'Especialidade exclu√≠da com sucesso.', 'success')
        .then(() => {
          location.reload(); // recarrega a p√°gina para atualizar a lista
        });
    } else {
      Swal.fire('Erro', 'N√£o foi poss√≠vel excluir a especialidade.', 'error');
    }
  } catch (error) {
    Swal.fire('Erro', 'Erro de comunica√ß√£o com o servidor.', 'error');
  }
}
</script>
